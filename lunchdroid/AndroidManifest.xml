<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lunchdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.lunchdroid.LunchdroidActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.lunchdroid.TabDistanceActivity" >
        </activity>
        <activity android:name="com.example.lunchdroid.TabFavoritActivity" >
        </activity>
        <activity
            android:name="com.example.lunchdroid.ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name="com.example.lunchdroid.PhoneCall"
            android:label="@string/title_activity_phone_call" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lunchdroid.ContactActivity" />
        </activity>
    </application>

</manifest>